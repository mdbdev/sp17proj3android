<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper"
    tools:context="com.example.adhirajdatar.mdbsocials.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="25sp"
        android:paddingTop="25sp"
        android:layout_marginRight="50sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LoginTextField"
            android:padding="10sp"
            android:text="Sign up for Socials!"
            android:gravity="center"
            android:layout_marginBottom="10sp"
            android:background="@drawable/titletextfield"
            android:typeface="monospace"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:background="@drawable/usernametext"
            android:gravity="center"
            style="@style/LoginTextField"
            android:id="@+id/signUpNameInput"
            android:inputType="text">
            <requestFocus/>
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/usernametext"
            android:gravity="center"
            style="@style/LoginTextField"
            android:id="@+id/signUpEmailInput"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/passwordtext"
            android:gravity="center"
            style="@style/LoginTextField"
            android:id="@+id/signUpPasswordInput"
            android:inputType="textPassword" />

        <Button
            android:text="Upload Photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addProfilePhotoButton"
            style="@style/LoginButtonText"
            android:background="@drawable/buttonshape"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"/>

        <ImageView
            android:layout_margin="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/profilePicPreview" />

        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_weight="0.5"
                style="@style/LoginButtonText"
                android:layout_marginRight="10sp"
                android:background="@drawable/buttonshape"
                android:layout_marginLeft="10sp"
                android:typeface="monospace"
                android:id="@+id/signUpButton"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>