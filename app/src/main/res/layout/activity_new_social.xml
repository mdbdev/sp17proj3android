<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51a2da"
    tools:context="com.example.sarahtang.mdbsocials.NewSocialActivity">

    <EditText
        android:inputType="text|textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        android:background="#ffffff"
        android:hint="Name of Event"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/addImageButton"
        app:layout_constraintRight_toRightOf="@+id/addImageButton"
        app:layout_constraintLeft_toLeftOf="@+id/addImageButton"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="300dp" />

    <EditText
        android:layout_height="39dp"
        android:inputType="date"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/editDate"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintLeft_toLeftOf="@+id/editName"
        android:hint="MM/DD/YY"
        app:layout_constraintRight_toRightOf="@+id/editName"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="300dp" />

    <EditText
        android:inputType="textShortMessage"
        android:ems="10"
        android:id="@+id/editDescription"
        android:hint="Description"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/editDate"
        app:layout_constraintLeft_toLeftOf="@+id/editDate"
        app:layout_constraintRight_toRightOf="@+id/editDate"
        app:layout_constraintHorizontal_bias="0.33"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="300dp"
        android:layout_height="100dp" />

    <Button
        android:layout_height="59dp"
        android:id="@+id/addImageButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="@drawable/ic_photo_camera_black_24dp"
        android:layout_width="60dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Submit"
        android:layout_width="218dp"
        android:layout_height="81dp"
        android:id="@+id/buttonSubmit"
        android:background="#ffcf32"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editDescription"
        app:layout_constraintLeft_toLeftOf="@+id/editDescription"
        app:layout_constraintRight_toRightOf="@+id/editDescription" />

</android.support.constraint.ConstraintLayout>
