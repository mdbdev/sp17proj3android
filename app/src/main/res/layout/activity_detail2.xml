<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eric.socials.DetailActivity">

    <TextView
        android:text="social Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socialName"
        android:textSize="36sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="158dp"
        android:layout_height="146dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/socialImage"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/socialName" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddress"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/socialImage"
        app:layout_constraintRight_toRightOf="@+id/socialImage"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/socialImage" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/emailAddress"
        app:layout_constraintRight_toRightOf="@+id/emailAddress"
        android:id="@+id/socialDescription"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numRSVPButton"
        android:text="Num RSVP"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/socialDescription"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="88dp" />

    <Button
        android:text="Interested?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interestedButton"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/socialDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="88dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
