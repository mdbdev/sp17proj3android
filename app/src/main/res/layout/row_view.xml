<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="68dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/eventImage"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventName"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="136dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="136dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/numRSVPButton"
            app:layout_constraintLeft_toLeftOf="@+id/numRSVPButton"
            app:layout_constraintTop_toBottomOf="@+id/numRSVPButton"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="RSVP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numRSVPButton"
            app:layout_constraintRight_toRightOf="@+id/eventName"
            app:layout_constraintLeft_toLeftOf="@+id/eventName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eventName" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>