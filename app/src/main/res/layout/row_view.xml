<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_weight="0.02"
        app:cardBackgroundColor="@color/bg3"
        app:cardElevation="8dp"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp"
        android:alpha="0.80"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="91dp"
                android:layout_height="94dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/socialImageView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="emailaddress@gmail.com"
                android:layout_width="255dp"
                android:layout_height="32dp"
                android:id="@+id/hostEmail"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/socialImageView"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/socialName"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/interested"
                android:layout_marginBottom="8dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white" />

            <TextView
                android:text="0 Interested"
                android:layout_width="151dp"
                android:layout_height="30dp"
                android:id="@+id/interested"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/socialImageView"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/socialName"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/socialImageView"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-smallcaps" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
