<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.adhirajdatar.mdbsocials.AddSocial"
    android:layout_gravity="center"
    android:gravity="center">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/newEventTitle"
        style="@style/PaddedTextField"
        android:background="@drawable/usernametext"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Date"
        android:ems="10"
        android:layout_below="@+id/newEventTitle"
        android:background="@drawable/usernametext"
        style="@style/PaddedTextField"
        android:id="@+id/newEventDate" />

    <Button
        android:hint="Upload Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newEventImage"
        android:background="@drawable/titletextfield"/>

    <ImageView
        android:layout_margin="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/eventImagePreview" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="10"
        android:background="@drawable/usernametext"
        style="@style/PaddedTextField"
        android:id="@+id/newEventDesc"
        android:layout_weight="1"/>

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newEventDesc"
        android:id="@+id/newEventCreate"
        android:background="@drawable/titletextfield"/>
</LinearLayout>
